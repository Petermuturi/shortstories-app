<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="story time"
        android:id="@+id/textView"
        android:textColor="#af57ff16"
        android:textSize="50dp"
        android:autoText="false"
        android:focusableInTouchMode="false"
        android:phoneNumber="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="story time"
        android:id="@+id/textView1"
        android:textColor="#afde81ff"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="story time"
        android:id="@+id/textView2"
        android:textSize="50dp"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="story time"
        android:id="@+id/textView3"
        android:textColor="#afff4d44"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="story time"
        android:id="@+id/textView4"
        android:textColor="#af50fff3"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="story time"
        android:id="@+id/textView5"
        android:textColor="#afffec30"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="story time"
        android:id="@+id/textView6"
        android:textColor="#af282fff"
        android:textSize="50dp"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="story time"
        android:id="@+id/textView7"
        android:textColor="#afff9700"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="story time"
        android:id="@+id/textView8"
        android:textColor="#af24ff6e"
        android:textSize="50dp" />

</LinearLayout>